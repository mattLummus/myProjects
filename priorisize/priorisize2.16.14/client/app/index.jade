doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Priorisize2.16.14
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Priorisize 2.16.14
    .row
      .small-12.columns
        form#form
          fieldset New Task
            label Name
              input#nameTxt(type='text', name='name' autofocus)
            label Priority (1-3)
              input#priTxt(type='text' name='priority')
            label Workload (1-3)
              input#workTxt(type='text' name='workload')
            label Start Date (e.g. 1/1/14)
              input#startTxt(type='text' name='start')
            label End Date
              input#endTxt(type='text' name='end')
            button#create Create
    .row
      .small-12.columns
        #body

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')

